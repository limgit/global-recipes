{
  "name": "global-recipes",
  "version": "0.1.0",
  "type": "module",
  "description": "Apply global CSS styles based on @vanilla-extract/recipes variant classes - style children, pseudo-states, and siblings by variant",
  "keywords": [
    "vanilla-extract",
    "css",
    "recipes",
    "global-styles",
    "variants",
    "styling",
    "css-in-js",
    "zero-runtime"
  ],
  "license": "MIT",
  "author": "Hyunsu Lim",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/limgit/global-recipes.git"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "format": "prettier --write \"**/*.{ts,mjs}\"",
    "format:check": "prettier --check \"**/*.{ts,mjs}\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "@vanilla-extract/css": ">=1.0.0",
    "@vanilla-extract/recipes": ">=0.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@vanilla-extract/css": "^1.17.5",
    "@vanilla-extract/recipes": "^0.5.7",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.7.4",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "vitest": "4.0.15"
  },
  "packageManager": "pnpm@10.24.0"
}
